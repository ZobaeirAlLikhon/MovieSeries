<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="5dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imag"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/poster"/>
            <RelativeLayout
                android:id="@+id/voteR"
                android:layout_below="@id/imag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@id/voteIV"
                    android:layout_width="12dp"
                    android:layout_height="20dp"
                    android:src="@drawable/vote_count"
                    />
                <TextView
                    android:id="@+id/voteTV"
                    android:gravity="center_vertical|left"
                    android:layout_toRightOf="@+id/voteIV"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="2222"
                    android:layout_marginLeft="2dp"
                    android:textSize="10dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/voteR"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka Attack 2"
                android:textColor="@color/purple_700"
                />
            <TextView
                android:layout_below="@+id/title"
                android:id="@+id/relDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release date:01-01-2021"
                android:textColor="@color/purple_700"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>